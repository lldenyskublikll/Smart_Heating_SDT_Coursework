@model PagedList.IPagedList<Smart_Heating.Models.Maintenance_List_AdminView>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

﻿@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

@{
    ViewBag.Title = "AdminViewMaintenance";
}

<h2>Список технічних робіт міста</h2>

@using (Html.BeginForm())
{
    <p>
        Знайти за параметрами "Дата початку/завершення роботи", "Тип/статус роботи", "Район", "Вулиця", "ID/Прізвище/Ім'я інженера": @Html.TextBox("search_str", ViewBag.CurrentFilter as string)
        <input type="submit" value="Пошук" />
    </p>
}

<table class="table table-warning table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">
                @Html.ActionLink("ID", "AdminViewMaintenance", new { sort_order = ViewBag.IdSort, currentFilter = ViewBag.CurrentFilter })
            </th>
            <th scope="col">
                @Html.ActionLink("ID інженера", "AdminViewMaintenance", new { sort_order = ViewBag.StaffIDSort, currentFilter = ViewBag.CurrentFilter })
            </th>
            <th scope="col">
                @Html.ActionLink("Логін", "AdminViewMaintenance", new { sort_order = ViewBag.LoginSort, currentFilter = ViewBag.CurrentFilter })
            </th>
            <th scope="col">
                @Html.ActionLink("Прізвище інженера", "AdminViewMaintenance", new { sort_order = ViewBag.SurnameSort, currentFilter = ViewBag.CurrentFilter })
            </th>
            <th scope="col">
                @Html.ActionLink("Ім'я інженера", "AdminViewMaintenance", new { sort_order = ViewBag.NameSort, currentFilter = ViewBag.CurrentFilter })
            </th>
            <th scope="col">
                @Html.ActionLink("По-батькові інженера", "AdminViewMaintenance", new { sort_order = ViewBag.SecondnameSort, currentFilter = ViewBag.CurrentFilter })
            </th>
            <th scope="col">
                @Html.ActionLink("Дата народження", "AdminViewMaintenance", new { sort_order = ViewBag.BirthdateSort, currentFilter = ViewBag.CurrentFilter })
            </th>
            <th scope="col">
                Н-р телефону
            </th>
            <th scope="col">
                Резервний н-р телефону
            </th>
            <th scope="col">
                Тип роботи
            </th>
            <th scope="col">
                Статус
            </th>
            <th scope="col">
                @Html.ActionLink("Дата початку", "AdminViewMaintenance", new { sort_order = ViewBag.StartdateSort, currentFilter = ViewBag.CurrentFilter })
            </th>
            <th scope="col">
                @Html.ActionLink("Дата завершення", "AdminViewMaintenance", new { sort_order = ViewBag.EnddateSort, currentFilter = ViewBag.CurrentFilter })
            </th>
            <th scope="col">
                @Html.ActionLink("ID адреси", "AdminViewMaintenance", new { sort_order = ViewBag.AddrIDSort, currentFilter = ViewBag.CurrentFilter })
            </th>
            <th scope="col">
                @Html.ActionLink("Район", "AdminViewMaintenance", new { sort_order = ViewBag.DistrictSort, currentFilter = ViewBag.CurrentFilter })
            </th>
            <th scope="col">
                @Html.ActionLink("Вулиця", "AdminViewMaintenance", new { sort_order = ViewBag.StreetSort, currentFilter = ViewBag.CurrentFilter })
            </th>
            <th scope="col">
                № Будинку
            </th>
            <th scope="col">
                № Квартири
            </th>
            <th scope="col">
                № Офісу
            </th>
            <th scope="col">
                @Html.ActionLink("Назва закладу", "AdminViewMaintenance", new { sort_order = ViewBag.EstablishmentSort, currentFilter = ViewBag.CurrentFilter })
            </th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ID_Тех__роботи)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ID_Працівника)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Логін)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Прізвище_працівника)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ім_я_працівника)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.По_Батькові_працівника)
                </td>
                <td>
                    @{ int year = item.Дата_народження.Year; int month = item.Дата_народження.Month; int day = item.Дата_народження.Day; string text = string.Format("{0}-{1}-{2}", year, month, day);}
                    @text
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Н_р_телефону)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Резервний_н_р_телефону)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Тип_роботи)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Статус)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Дата_початку_робіт)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Дата_закінчення_робіт)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ID_адреси)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Район)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Назва_вулиці)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.C__Будинку)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.C__Квартири)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.C__Офісу)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Назва_закладу)
                </td>
                <td>
                    <form action="AdminDeleteMaint" method="post">
                        <a href="@Url.Action("AdminDeleteMaint", "Admin", new { MaintID = item.ID_Тех__роботи })" class="btn btn-danger ">Видалити</a>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>


<div style="margin-left: 11px">
    <br />
    Сторінка @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) з @Model.PageCount

    @Html.PagedListPager(Model, page => Url.Action("AdminViewMaintenance",
        new { page, sort_order = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
</div>

<div>
    <a type="button" href="@Url.Action("AdminAddNewMaintenance", "Admin")" class="btn btn-success" style="margin-top:12px; margin-left: 11px">Додати новий запис</a>
</div>

<div>
    <a type="button" href="@Url.Action("AdminDashBoard", "Admin")" class="btn btn-light" style="margin-top:12px; margin-left: 11px">Повернутись</a>
</div>
