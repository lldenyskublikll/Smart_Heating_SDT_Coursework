@model Smart_Heating.Models.Maintenance

@{
    ViewBag.Title = "AdminAddNewMaintenance";
}

@{
    var engineers = ViewData["Engineers"] as SelectList;
    var addresses = ViewData["Addresses"] as SelectList;
}

<h2>AdminAddNewMaintenance</h2>

<h4>Сторення нового запиту на тех.роботу</h4>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<table class="table table-warning table-striped table-hover">
    <thead><tr><td></td></tr></thead>
    <tbody>
        <tr>
            <td>
                <div class="form-group">
                    @Html.LabelFor(model => model.StaffUserID, "Інженер, що буде відповідальним за виконання", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.StaffUserID, engineers, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.StaffUserID, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.MaintAddress, "Адреса, за якою буде проводитись тех.робота", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.MaintAddress, addresses, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.MaintAddress, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.MaintType, "Тип роботи", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.MaintType, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.MaintType, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.MaintStatus, "Статус роботи", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.MaintStatus, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.MaintStatus, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.MaintStartDate, "Дата початку", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.MaintStartDate, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.MaintStartDate, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.MaintEndDate, "Дата завершення", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.MaintEndDate, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.MaintEndDate, "", new { @class = "text-danger" })
                    </div>
                </div>
            </td>
        </tr>
    </tbody>
</table>    
    <input type="submit" value="Зберегти зміни" class="btn btn-success" style=" margin-top: 12px; margin-left: 11px" />
}

<div>
    <a type="button" href="@Url.Action("AdminViewMaintenance", "Admin")" class="btn btn-light" style="margin-top: 12px; margin-left: 11px">Повернутись</a>
</div>
