@model Smart_Heating.Models.Sensor

@{
    ViewBag.Title = "AdminAddNewSensor";
}

@{
    var addresses = ViewData["Addresses"] as SelectList;
    var sensortypes = ViewData["SensorTypes"] as SelectList;
}

<h2>AdminAddNewSensor</h2>

<h4>Сторення нової датчика</h4>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <table class="table table-warning table-striped table-hover">
        <thead><tr><td></td></tr></thead>
        <tbody>
            <tr>
                <td>
                    <div class="form-group">
                        @Html.LabelFor(model => model.SensorType, "Тип датчика", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownListFor(model => model.SensorType, sensortypes, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.SensorType, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.SensorAddress, "Адреса", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownListFor(model => model.SensorAddress, addresses, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.SensorAddress, "", new { @class = "text-danger" })
                        </div>
                    </div>                    
                </td>
            </tr>
        </tbody>
    </table>
    <input type="submit" value="Зберегти зміни" class="btn btn-success" style=" margin-top: 12px; margin-left: 11px" />
}

<div>
    <a type="button" href="@Url.Action("AdminViewSensors", "Admin")" class="btn btn-light" style="margin-top: 12px; margin-left: 11px">Повернутись</a>
</div>
